<%= form_for todo do |f| %>
<fieldset>
  <legend>Add/Edit To-Do Items</legend>

  <% if todo.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(todo.errors.count, "error") %> prohibited this todo from being saved:</h2>
      <ul>
      <% todo.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.label :title %>
  <%= f.text_field :title %><br>

  <%= f.label :completed_at %>
  <%= f.text_field :completed_at %><br>

  <%= f.label :due_date %>
  <%= f.text_field :due_date, value: 1.week.from_now.to_date.to_s(:db) %><br>

  <%= f.label :priority %>
  <%= f.number_field :priority %><br>

  <%= f.label :order %>
  <%= f.number_field :order %><br>

  <%= f.hidden_field :id %>
  <%= f.submit %>

</fieldset>
<% end %>
